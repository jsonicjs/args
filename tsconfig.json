{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "nodenext",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir":"dist",
    "resolveJsonModule": true,
    "rootDir":"src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
  ]
}
